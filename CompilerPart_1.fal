    result.writeText("@SP" + "\n" + "A=M-1"
	                       + "\n" + "D=M"
						   + "\n" + "A=A-1"
						   + "\n" + "D=M-D"
						   + "\n" + "@TRUE" + true_label
						   + "\n" + "D;JLT"
