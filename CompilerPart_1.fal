						   + "\n" + "0;JMP"
						   + "\n" + "(TRUE" + true_label + ")"
						   + "\n" + "D=-1"
						   + "\n" + "(FALSE + false_label + ")"
						   + "\n" + "@SP"
						   + "\n" + "M=M-1"
						   + "\n" + "@SP"
						   + "\n" + "A=M-1"
						   + "\n" + "M=D" + "\n")
	++true_label
    ++false_label
end	

